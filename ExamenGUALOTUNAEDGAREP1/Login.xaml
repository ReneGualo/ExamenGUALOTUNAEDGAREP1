<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenGUALOTUNAEDGAREP1.MainPage">

    <ContentPage.Content>
        <StackLayout>

            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png" />
            <Label Text="Examen Parcial" HorizontalTextAlignment="Center" TextColor="red" FontSize="25"></Label>
            <Entry x:Name="txtUser" Placeholder="Ingrese Usuario" TextColor="Yellow"></Entry>
            <Entry x:Name="txtPass" Placeholder="Ingrese Contraseña" TextColor="Yellow" IsPassword="True"></Entry>
            <Button x:Name="btnLogin" Text="Inicio de Sesion" Clicked="btnLogin_Clicked" TextColor="YellowGreen" 
                    BackgroundColor="Blue"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>